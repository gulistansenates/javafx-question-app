<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.fqquiz.QuizController">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <Label fx:id="questionLabel" wrapText="true" style="-fx-font-size: 16px;"/>
    <VBox fx:id="optionsBox" spacing="10"/>
    <Label fx:id="timerLabel" style="-fx-font-weight: bold;"/>
    <Label fx:id="resultLabel" style="-fx-text-fill: green;"/>
</VBox>
